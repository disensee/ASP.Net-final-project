@model Drive
@{
    ViewBag.Title = "Edit Drive";
    Layout = "_AdminLayout";
}

    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="DriveId" />
        <div class="form-group">
            <label asp-for="Manufacturer"></label>
            <div><span asp-validation-for="Manufacturer" class="text-danger"></span></div>
            <input asp-for="Manufacturer" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Model"></label>
            <div><span asp-validation-for="Model" class="text-danger"></span></div>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Interface"></label>
            <div><span asp-validation-for="Interface" class="text-danger"></span></div>
            <input asp-for="Interface" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SizeInGB"></label>
            <div><span asp-validation-for="SizeInGB" class="text-danger"></span></div>
            <input asp-for="SizeInGB" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TransferProtocol"></label>
            <div><span asp-validation-for="TransferProtocol" class="text-danger"></span></div>
            <input asp-for="TransferProtocol" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </form>